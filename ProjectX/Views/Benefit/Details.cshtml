@model ProjectX.Entities.Models.Benefit.BenResp
@{
	var filldata = ViewData["filldata"] as ProjectX.Entities.Models.General.LoadDataResp;

}


<div class="content" pgtype="view">
	<div class="container-fluid" style="padding:10px 0">
		<div class="row mb-3">
			<div class="col-md-12 ">
				<div class="card h-100 ">
					<div class="card-header custom">
						<h4 class="card-title ">
							<i class="fa fa-arrow-alt-circle-left pointercursor" onclick="gotopage('benefit','index')"></i>
							<span>Edit Benefit</span>
						</h4>
					</div>
					<div class="card-body">
						<div class="row">
							<div id="divinfo" class="col-lg-12" mid="@Model.id">
								<div class="row">
									@*<div class="form-group col-lg-4">
										<label for="title">Title</label>
										<input type="text" class="form-control" id="title" name="title" value="@Model.title" required>
									</div>*@
									<div class="form-group col-lg-4">
										<label for="title">Title</label>
										<select class="form-control isselect2" id="titleId" name="titleId" required>
											<option value="">Select Title</option>
											@foreach (var thislist in filldata.loadedData.benefitTitle)
											{
												@if (thislist.LK_ID == Model.titleId)
												{
													<option value="@thislist.LK_ID" selected> @thislist.LK_TableField</option>
												}
												else
												{
													<option value="@thislist.LK_ID"> @thislist.LK_TableField</option>
												}
											}
										</select>
									</div>

									<div class="form-group col-lg-4">
										<label for="limit">Limit</label>
										<input type="text" class="form-control" id="limit" name="limit" value="@Model.limit" required>
									</div>
									<div class="form-group col-lg-4">
										<label for="packageId">Package</label>
										<select class="form-control isselect2" id="packageId" name="packageId" required>
											<option value="">Select Package</option>
											@foreach (var thislist in filldata.loadedData.packages)
											{
												@if (thislist.LK_ID == Model.packageId)
												{
													<option value="@thislist.LK_ID" selected> @thislist.LK_TableField</option>
												}
												else
												{
													<option value="@thislist.LK_ID"> @thislist.LK_TableField</option>
												}
											}
										</select>
									</div>
									<div class="form-group col-lg-4">
										<div class="form-group mb-0">
											<div class="form-check">
												<input class="form-check-input" type="checkbox" id="is_Plus" autocomplete="off" @(Model.is_Plus == true ? "checked" : "")>
												<label class="form-check-label" for="is_Plus">
													Is Benefit Plus

												</label>
											</div>
										</div>
									</div>
									<div id="addBenFormat" class="form-group col-lg-4 hidden">
										<label for="additional_benefits">Additional Benefits</label>
										<div class="input-group mb-3">
											<input type="number" class="form-control" aria-label="text input with dropdown button" id="additional_benefits" name="additional_benefits" value="@Model.additionalBenefits">
											<div class="input-group-prepend">
												<select class="form-control" id="additional_benefits_format" name="additional_benefits_format" required>
													@foreach (var thislist in filldata.loadedData.format.OrderByDescending(x => x.LK_ID))
													{
														@if (thislist.LK_ID == Model.additionalBenefitsFormat)
														{
															<option value="@thislist.LK_ID" selected> @thislist.LK_TableField</option>
														}
														else
														{
															<option value="@thislist.LK_ID"> @thislist.LK_TableField</option>
														}
													}
												</select>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="row">
			<div class="col-md-12">
				<div class="card card-body">
					<div class="row">
						<div class="col-lg-8">
						</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="col-lg-4">
								</div>

								<div class="col-lg-4">
									<button id="btndelete" class="btn btn-danger w-100 mb-2" type="submit" data-toggle="modal" data-target="#confirm-delete">
										<span> Delete </span>
									</button>
								</div>
								@*<div class="col-lg-4">
										<button id="ppp" class="btn btn-info w-100 mb-2" type="submit" data-toggle="modal" data-target="#view-attach-2">
											<span> Files </span>
										</button>
									</div>*@
								<div class="col-lg-4">
									<button id="edit" class="btn btn-primary w-100 bglocalcolor" type="submit">
										<span> Save </span>
									</button>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="confirm-email-approval" class="modal fade" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Are you sure you want to delete this benefit?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn  bglocalcolor border" data-dismiss="modal">Close</button>
				<div id="thisloader" class="smloader hide"></div>
				<button id="confirmdeletebtn" type="button" class="btn btn-danger">Proceed</button>
			</div>
		</div>
	</div>
</div>






