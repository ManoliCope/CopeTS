@model ProjectX.Entities.Models.Zone.ZoneResp
@{
	var filldata = ViewData["filldata"] as ProjectX.Entities.Models.General.LoadDataResp;

}


<div class="content" pgtype="view">
	<div class="container-fluid" style="padding:10px 0">
		<div class="row mb-3">
			<div class="col-md-12 ">
				<div class="card h-100 ">
					<div class="card-body">
						<h4 class="card-title ">
							<i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
							<span>Edit Zone </span>
						</h4>
						<hr />

						<div class="row">
							<div id="divinfo" class="col-lg-12" mid="@Model.id">
								<div class="row">
									<div class="form-group mb-3 col-lg-4">
										<label for="Z_Id">ID</label>
                                        <label class="form-control">@Model.id</label>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="Z_Title">Title</label>
										<input type="text" class="form-control" id="Z_Title" name="Z_Title" required="" value="@Model.title">
									</div>


								</div>
							</div>
						</div>


						<div class="row">
							<div class="form-group mb-3 col-lg-12">
								<label for="Z_Destination_Id">Destination</label>
								<ul class="tree-list">
									@foreach (var continentId in filldata.loadedData.destinations.Select(x => x.D_IdContinent).Distinct())
									{
										var destinations = filldata.loadedData.destinations.Where(x => x.D_IdContinent == continentId).ToList();

										<li class="expandable">
											<span class="arrow"></span>
											<label>
												<input type="checkbox" class="parent-checkbox" id="checkbox_@continentId" value="0">
												@destinations.First().D_Continent
											</label>
											<ul>
												@foreach (var destination in destinations)
												{
													<li>
														<label>
															<input type="checkbox" id="checkbox_@(continentId)_@destination.D_Id" value="@destination.D_Id" @(Model.destinationId.Contains(destination.D_Id) ? "checked" : "")  onchange="checkContinent(this, @continentId)">

															@destination.D_Destination
														</label>
													</li>
												}
											</ul>
										</li>
									}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="row">
			<div class="col-md-12">
				<div class="card card-body">
					<div class="row">
						<div class="col-lg-8">
						</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="col-lg-4">
									<button id="btndelete" class="btn btn-danger w-100 mb-2" type="submit" data-toggle="modal" data-target="#confirm-delete">
										<span> Delete </span>
									</button>
								</div>
								<div class="col-lg-4">
									<button id="ppp" class="btn btn-info w-100 mb-2" type="submit" data-toggle="modal" data-target="#view-attach-2">
										<span> Files </span>
									</button>
								</div>
								<div class="col-lg-4">
									<button id="edit" class="btn btn-primary w-100 bglocalcolor" type="submit">
										<span> Save </span>
									</button>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="confirm-email-approval" class="modal fade" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Are you sure you want to delete this zone?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn  bglocalcolor border" data-dismiss="modal">Close</button>
				<div id="thisloader" class="smloader hide"></div>
				<button id="confirmdeletebtn" type="button" class="btn btn-danger">Proceed</button>
			</div>
		</div>
	</div>
</div>






