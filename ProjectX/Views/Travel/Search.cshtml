@*@model ProjectX.Entities.Models.General.LoadDataResp*@

<link href="~/Content/assets/css/travel.css" rel="stylesheet" asp-append-version="true"/>


<div class="content">

    <div class="row page-title">
        <div class="col-md-12">
            @*<nav aria-label="breadcrumb" class="float-right mt-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Call Center CMS</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Register Call</li>
                    </ol>
                </nav>*@
            <h4 class="mb-0 mt-0">
                Travel Policy Search
            </h4>

        </div>
    </div>

    <!-- Start Content-->
    <div class="container-fluid " style="padding:10px 0">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div id="searchform" class="card-body">
                        <div>
                            <div class="row mb-6">
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label>ID/Certificate#:</label>
                                    <input id="certificate" type="text" class="form-control datatable-input" placeholder="Certificate" data-col-index="0">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label>Policy# :</label>
                                    <input id="policyNo" type="text" class="form-control datatable-input" placeholder="Policy Number" data-col-index="0" >
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label>Name:</label>
                                    <input id="name" type="text" class="form-control datatable-input" placeholder="Name" data-col-index="1">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label>DOB:</label>
                                    <input id="dob" type="date" class="form-control datatable-input" name="end" placeholder="Date of Birth" data-col-index="5">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label>Customer Type:</label>
                                    <select id="idCustomerType" data-plugin="CustomerType" class="form-control" data-placeholder="Customer Type">
                                        <option value=""> Select Customer Type </option>
                                        @foreach (var type in Model.loadedData.customerTypes)
                                        {
                                            <option value="@type.LK_ID"> @type.LK_TableField</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label>Phone #:</label>
                                    <input id="phoneNo" type="text" class="form-control datatable-input" placeholder="Phone Number" data-col-index="4">
                                </div>
                                <div class="col-lg-3">
                                </div>
                                <div class="col-lg-3 mt-1">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <button class="btn bglocalcolor mt-4 loadingthis" id="searchpolicy" data-toggle="tooltip"
                                                    data-original-title="Select at least one filter!" style="width:100%">
                                                <span>
                                                    <i class="la la-search"></i>
                                                    <span>Search</span>
                                                </span>
                                            </button>&nbsp;&nbsp;
                                        </div>
                                        <div class="col-sm-6">
                                            <button class="btn btn-info mt-4 resetdiv" id="kt_reset"  style="width:100%">
                                                <span>
                                                    <i class="la la-close"></i>
                                                    <span>Reset</span>
                                                </span>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row mb-8">
                                <div class="col-lg-9 mb-lg-0 mb-6">
                                </div>
                                <div class="col-lg-3">

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*<div class="loaders">

        </div>*@


        <div class="row tablediv">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <table id="policy" class="table dt-responsive nowrap table compact table-hover table-flush table-striped table-bordered" style="width:100%; ">
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <div class="modal modal-popup" id="view-policy" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
            <div class="modal-dialog  modal-full">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addLabel"> View Policy</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="false">×</span>
                        </button>
                    </div>
                    <div class="scrolly">
                        <div class="modal-body">

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="modal fade" id="view-history" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
                <div class="modal-content ">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Case History</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body scrolly" style="padding: 0 12px 0 12px;">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@*<script src="~/Content/assets/js/TravelSearch.js" asp-append-version="true"></script>*@






