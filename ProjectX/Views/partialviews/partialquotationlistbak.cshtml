		{
			<option value="@plan.PlanId" data-bprice="@plan.BasePrice" data-fprice="@plan.FinalPrice" data-price0="@plan.DiscountPercentage" data-deductible="@plan.IsDeductible">
				@plan.PlanName
			</option>
		}*@
									<option value="@item.Plan">
										@item.PlanName
									</option>
								</select>
							</td>

							<td>@item.PriceAmount USD</td>
							<td>@item.PriceAmount USD</td>
							<td>@item.NetPremiumAmount USD</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
