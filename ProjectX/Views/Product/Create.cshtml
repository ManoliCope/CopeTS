@model ProjectX.Entities.Models.Product.ProdGetResp
@{
	//var filldata = ViewData["filldata"] as ProjectX.Entities.Models.General.LoadDataResp;
}


<div class="content" pgtype="view">
	<div class="container-fluid" style="padding:10px 0">
		<div class="row mb-3">
			<div class="col-md-12 ">
				<div class="card h-100 ">
					<div class="card-header custom">
						<h4 class="card-title ">
							<i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
							<span>New Product</span>
						</h4>
					</div>
					<div class="card-body">
						<div class="row">
							<div id="divinfo" class="col-lg-12">
								<div class="row">
									<div class="form-group mb-3 col-lg-4">
										<label for="title">Title</label>
										<input type="text" class="form-control" id="title" name="title" required="">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="description">Description</label>
										<input type="text" class="form-control" id="description" name="description">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="activation_date">Activation Date</label>
										<input type="date" class="form-control" id="activation_date" name="activation_date" required="">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="is_deductible">Deductible</label>
										<div class="input-group mb-3">
											<input type="number" class="form-control" aria-label="Text input with dropdown button" id="is_deductible" name="is_deductible">
											<div class="input-group-prepend">
												<select class="form-control" id="deductible_format" name="deductible_format" required>
													<option>Select Type</option>
													<option value="1">%</option>
													<option value="2">Fixed</option>
												</select>
											</div>
										</div>
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="sports_activities">Sports Activities</label>
										<div class="input-group mb-3">
											<input type="number" class="form-control" aria-label="Text input with dropdown button" id="sports_activities" name="sports_activities">
											<div class="input-group-prepend">
												<select class="form-control" id="sports_activity_format" name="sports_activity_format" required>
													<option>Select Type</option>
													<option value="1">%</option>
													<option value="2">Fixed</option>
												</select>
											</div>
										</div>
									</div>
									<div class="form-group mb-3 col-lg-4">
										@*<label for="additional_benefits">Additional Benefits</label>
							<div class="input-group mb-3">
								<input type="number" class="form-control" aria-label="Text input with dropdown button" id="additional_benefits" name="additional_benefits">
								<div class="input-group-prepend">
									<select class="form-control" id="additional_benefits_format" name="additional_benefits_format" required>
										<option>Select Type</option>
										<option value="1">%</option>
										<option value="2">Fixed</option>
									</select>
								</div>
							</div>*@
									</div>
									<div class="form-group mb-3 col-lg-2">
										<div class="form-group mb-0">
											<div class="form-check">
												<input id="is_individual" type="checkbox" class="form-check-input datatable-input" data-col-index="4">
												<label class="form-check-label" for="is_individual">
													Is Individual
												</label>
												<br>
												<input id="is_group" type="checkbox" class="form-check-input datatable-input" data-col-index="4">
												<label class="form-check-label" for="is_group">
													Is Group
												</label>
											</div>
										</div>
									</div>
									<div class="form-group mb-3 col-lg-2">
										<div class="form-group mb-0">
											<div class="form-check">
												<input class="form-check-input" type="checkbox" id="is_family" autocomplete="off">
												<label class="form-check-label" for="is_family">
													Is Family
												</label>
												<br>
												<input class="form-check-input" type="checkbox" id="is_active" autocomplete="off">
												<label class="form-check-label" for="is_active">
													Is Active
												</label>



											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="card card-body">
					<div class="row">
						<div class="col-lg-8">
						</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="col-lg-8">
								</div>
								<div class="col-lg-4">
									<button id="create" class="btn btn-primary w-100 bglocalcolor" type="submit">
										<span> Add </span>
									</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>






