@*@model ProjectX.Entities.Models.General.LoadDataResp*@


<div class="content">
    <!-- Start Content-->
    <div class="row page-title">
        <div class="col-md-12">
            @*<span class="pointercursor">
                    <a href="~/product/create/">
                        <i class="fas fa-plus-circle addnew pointercursor float-right"></i>
                    </a>
                </span>*@
            <a class="btn bglocalcolor float-right addnewbtn" href="~/product/create/">
                <i class="fas fa-plus-circle"></i> Add
            </a>
            <h4 class="mb-0 mt-0 float-left">Products</h4>




        </div>
    </div>
    <div class="container-fluid " style="padding:10px 0">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div id="searchform" class="card-body">
                        <div>
							<div class="row mb-6">
								<div class="col-lg-3 mb-lg-0 mb-6">
									<label for="id">ID:</label>
									<input id="id" type="text" class="form-control datatable-input" placeholder="Enter ID" data-col-index="0">
								</div>

								<div class="col-lg-3 mb-lg-0 mb-6">
									<label for="title">Title:</label>
									<input id="title" type="text" class="form-control datatable-input" placeholder="Enter Title" data-col-index="1">
								</div>

								<div class="col-lg-3 mb-lg-0 mb-6">
									<label for="description">Description:</label>
									<input id="description" type="text" class="form-control datatable-input" placeholder="Enter Description" data-col-index="2">
								</div>



								<div class="col-lg-3 mb-lg-0 mb-6">
									<label for="is_deductible">Is Deductible:</label>
									<input id="is_deductible" type="number" step="0.01" class="form-control datatable-input" placeholder="Enter Deductible" data-col-index="5">
								</div>

								<div class="col-lg-3 mb-lg-0 mb-6">
									<label for="sports_activities">Sports Activities:</label>
									<input id="sports_activities" type="number" step="0.01" class="form-control datatable-input" placeholder="Enter Sports Activities" data-col-index="6">
								</div>

								<div class="col-lg-3 mb-lg-0 mb-6">
									<label for="additional_benefits">Additional Benefits:</label>
									<input id="additional_benefits" type="number" step="0.01" class="form-control datatable-input" placeholder="Enter Additional Benefits" data-col-index="7">
								</div>
								<div class="col-lg-3 mb-lg-0 mb-6 mt-2">
									<div class="form-check">
										<input id="is_family" type="checkbox" class="form-check-input datatable-input" data-col-index="3">
										<label class="form-check-label" for="is_family">Is Family</label>
										<br />
										<input id="is_active" type="checkbox" class="form-check-input datatable-input" data-col-index="4">
										<label class="form-check-label" for="is_active">Is Active</label>
									</div>
								</div>


								<div class="col-lg-3">
									<div class="row mt-4">
										<div class="col-sm-6">
											<button class="btn bglocalcolor" id="search" style="width:100%">
												<span>
													<i class="la la-search"></i>
													<span>Search</span>
												</span>
											</button>&nbsp;&nbsp;
										</div>
										<div class="col-sm-6">
											<button class="btn btn-info resetdiv" id="kt_reset" style="width:100%">
												<span>
													<i class="la la-close"></i>
													<span>Reset</span>
												</span>
											</button>
										</div>
									</div>
								</div>

							</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row tablediv">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <table id="producttable" class="table dt-responsive nowrap table compact table-hover table-flush table-striped table-bordered" style="width:100%; ">
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="confirm-email-approval" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn  bglocalcolor border" data-dismiss="modal">Close</button>
                <div id="thisloader" class="smloader hide"></div>
                <button id="confirmdeletebtn"  type="button" class="btn btn-danger">Proceed</button>
            </div>
        </div>
    </div>
</div>
