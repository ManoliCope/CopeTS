<div class="content" pgtype="view">
	<div class="container-fluid" style="padding:10px 0">
		<div class="row mb-3">
			<div class="col-md-12 ">
				<div class="card h-100 ">
					<div class="card-header custom">
						<h4 class="card-title ">
							<i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
							<span>New Plan</span>
						</h4>
					</div>
					<div class="card-body">
						<div class="row">
							<div id="divinfo" class="col-lg-12">
								<div class="row">
									<div class="form-group mb-3 col-lg-4">
										<label for="title">Title</label>
										<input type="text" class="form-control" id="title" name="title" required="">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<div class="form-check">
											<br />
											<input class="form-check-input" type="checkbox" id="pa_included" autocomplete="off">
											<label class="form-check-label" for="pa_included">
												PA Included
											</label>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="card card-body">
					<div class="row">
						<div class="col-lg-8">
						</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="col-lg-8">
								</div>
								<div class="col-lg-4">
									<button id="create" class="btn btn-primary w-100 bglocalcolor" type="submit">
										<span> Add </span>
									</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>






