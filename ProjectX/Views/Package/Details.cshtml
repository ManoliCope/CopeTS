@model ProjectX.Entities.Models.Package.PackResp
@{
	var filldata = ViewData["filldata"] as ProjectX.Entities.Models.General.LoadDataResp;

}


<div class="content" pgtype="view">
	<div class="container-fluid" style="padding:10px 0">
		<div class="row mb-3">
			<div class="col-md-12 ">
				<div class="card h-100 ">
					<div class="card-body">
						<h4 class="card-title ">
							<i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
							<span>Edit Package</span>
						</h4>
						<hr />

						<div class="row">
							<div id="divinfo" class="col-lg-12" mid="@Model.id">
                                <div class="row">
                                    <div class="form-group">
                                        <label for="id">ID</label>
                                        <input type="number" class="form-control" id="id" name="id" value="@Model.id" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control" id="name" name="name" value="@Model.name" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="cob">COB</label>
                                        <input type="text" class="form-control" id="cob" name="cob" value="@Model.cob" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="cobId">COB ID</label>
                                        <input type="number" class="form-control" id="cobId" name="cobId" value="@Model.cobId" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="plan">Plan</label>
                                        <input type="text" class="form-control" id="plan" name="plan" value="@Model.plan" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="planId">Plan ID</label>
                                        <input type="number" class="form-control" id="planId" name="planId" value="@Model.planId" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="zone">Zone</label>
                                        <input type="text" class="form-control" id="zone" name="zone" value="@Model.zone" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="zoneId">Zone ID</label>
                                        <input type="number" class="form-control" id="zoneId" name="zoneId" value="@Model.zoneId" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="remove_deductable">Remove Deductible</label>
                                        <input type="number" class="form-control" id="remove_deductable" name="remove_deductable" value="@Model.remove_deductable" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="adult_no">Adult Count</label>
                                        <input type="number" class="form-control" id="adult_no" name="adult_no" value="@Model.adult_no" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="children_no">Children Count</label>
                                        <input type="number" class="form-control" id="children_no" name="children_no" value="@Model.children_no" required>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="pa_included" name="pa_included" @(Model.pa_included ? "checked" : "")>
                                            <label class="form-check-label" for="pa_included">
                                                PA Included
                                            </label>
                                        </div>
                                    </div>

                                </div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="row">
			<div class="col-md-12">
				<div class="card card-body">
					<div class="row">
						<div class="col-lg-8">
						</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="col-lg-4">
									<button id="btndelete" class="btn btn-danger w-100 mb-2" type="submit" data-toggle="modal" data-target="#confirm-delete">
										<span> Delete </span>
									</button>
								</div>
								<div class="col-lg-4">
									<button id="ppp" class="btn btn-info w-100 mb-2" type="submit" data-toggle="modal" data-target="#view-attach-2">
										<span> Files </span>
									</button>
								</div>
								<div class="col-lg-4">
									<button id="edit" class="btn btn-primary w-100 bglocalcolor" type="submit">
										<span> Save </span>
									</button>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="confirm-email-approval" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this package?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn  bglocalcolor border" data-dismiss="modal">Close</button>
                <div id="thisloader" class="smloader hide"></div>
                <button id="confirmdeletebtn" type="button" class="btn btn-danger">Proceed</button>
            </div>
        </div>
    </div>
</div>






