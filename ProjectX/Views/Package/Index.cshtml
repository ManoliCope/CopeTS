@*@model ProjectX.Entities.Models.General.LoadDataResp*@


<div class="content">
    <!-- Start Content-->
    <div class="row page-title">
        <div class="col-md-12">
            @*<span class="pointercursor">
                    <a href="~/package/create/">
                        <i class="fas fa-plus-circle addnew pointercursor float-right"></i>
                    </a>
                </span>*@
            <a class="btn bglocalcolor float-right addnewbtn" href="~/package/create/">
                <i class="fas fa-plus-circle"></i> Add
            </a>
            <h4 class="mb-0 mt-0 float-left">Packages</h4>




        </div>
    </div>
    <div class="container-fluid " style="padding:10px 0">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div id="searchform" class="card-body">
                        <div>
                            <div class="row mb-6">
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label for="id">ID:</label>
                                    <input id="id" type="text" class="form-control datatable-input id" placeholder="Enter ID" data-col-index="0">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label for="name">Name:</label>
                                    <input id="name" type="text" class="form-control datatable-input name" placeholder="Enter Name" data-col-index="1">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label for="cobId">Country of Birth ID:</label>
                                    <input id="cobId" type="text" class="form-control datatable-input cobId" placeholder="Enter Country of Birth ID" data-col-index="2">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label for="zoneId">Zone ID:</label>
                                    <input id="zoneId" type="text" class="form-control datatable-input zoneId" placeholder="Enter Zone ID" data-col-index="3">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label for="remove_deductable">Remove Deductible:</label>
                                    <input id="remove_deductable" type="text" class="form-control datatable-input remove_deductable" placeholder="Enter Remove Deductible" data-col-index="4">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label for="adult_no">Adult Number:</label>
                                    <input id="adult_no" type="text" class="form-control datatable-input adult_no" placeholder="Enter Adult Number" data-col-index="5">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label for="children_no">Children Number:</label>
                                    <input id="children_no" type="text" class="form-control datatable-input children_no" placeholder="Enter Children Number" data-col-index="6">
                                </div>
                                <div class="col-lg-3 mb-lg-0 mb-6">
                                    <label for="pa_included">PA Included:</label>
                                    <input id="pa_included" type="checkbox" class="form-control datatable-input pa_included" data-col-index="7">
                                </div>

                                <div class="col-lg-9">
                                </div>
                                <div class="col-lg-3">
                                    <div class="row mt-4">
                                        <div class="col-sm-6">
                                            <button class="btn bglocalcolor" id="search" style="width:100%">
                                                <span>
                                                    <i class="la la-search"></i>
                                                    <span>Search</span>
                                                </span>
                                            </button>&nbsp;&nbsp;
                                        </div>
                                        <div class="col-sm-6">
                                            <button class="btn btn-info resetdiv" id="kt_reset" style="width:100%">
                                                <span>
                                                    <i class="la la-close"></i>
                                                    <span>Reset</span>
                                                </span>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row tablediv">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <table id="packagetable" class="table dt-responsive nowrap table compact table-hover table-flush table-striped table-bordered" style="width:100%; ">
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="confirm-email-approval" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn  bglocalcolor border" data-dismiss="modal">Close</button>
                <div id="thisloader" class="smloader hide"></div>
                <button id="confirmdeletebtn"  type="button" class="btn btn-danger">Proceed</button>
            </div>
        </div>
    </div>
</div>
