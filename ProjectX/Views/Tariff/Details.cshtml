@model ProjectX.Entities.Models.Tariff.TariffResp
@{
	var filldata = ViewData["filldata"] as ProjectX.Entities.Models.General.LoadDataResp;

}


<div class="content" pgtype="view">
	<div class="container-fluid" style="padding:10px 0">
		<div class="row mb-3">
			<div class="col-md-12 ">
				<div class="card h-100 ">
					<div class="card-header custom">
						<h4 class="card-title ">
							<i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
							<span>Edit Tariff</span>
						</h4>
					</div>
					<div class="card-body">

						<div class="row">
							<div id="divinfo" class="col-lg-12" mid="@Model.id">
								<div class="row">
									<div class="form-group mb-3 col-lg-4">
										<label for="idPackage">Package</label>
										<select class="form-control isselect2" id="idPackage" name="idPackage" required>
											<option value="">Select Package</option>

											@foreach (var thislist in filldata.loadedData.packages)
											{
												@if (thislist.LK_ID == Model.idPackage)
												{
													<option value="@thislist.LK_ID" selected> @thislist.LK_TableField</option>
												}
												else
												{
													<option value="@thislist.LK_ID"> @thislist.LK_TableField</option>
												}
											}


										</select>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="idPackage">Plan</label>
										<select class="form-control isselect2" id="idPlan" name="idPlan" required>
											<option value="">Select Plan</option>
											@foreach (var thislist in filldata.loadedData.plans)
											{
												@if (thislist.LK_ID == Model.planId)
												{
													<option value="@thislist.LK_ID" selected> @thislist.LK_TableField</option>
												}
												else
												{
													<option value="@thislist.LK_ID"> @thislist.LK_TableField</option>
												}
											}


										</select>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="start_age">Start Age</label>
										<input type="number" class="form-control" id="start_age" name="start_age" value="@Model.start_age" required>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="end_age">End Age</label>
										<input type="number" class="form-control" id="end_age" name="end_age" value="@Model.end_age" required>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="number_of_days">Number of days</label>
										<input type="number" class="form-control" id="number_of_days" name="number_of_days" value="@Model.number_of_days" required>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="price_amount">Gross Premium</label>
										<input type="number" class="form-control" id="price_amount" name="price_amount" step="0.01" value="@Model.price_amount" required>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="net_premium_amount">Net Premium Amount</label>
										<input type="number" class="form-control" id="net_premium_amount" name="net_premium_amount" step="0.01" value="@Model.net_premium_amount" required>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="pa_amount">PA Amount</label>
										<input type="number" class="form-control" id="pa_amount" name="pa_amount" step="0.01" value="@Model.pa_amount">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="Override_Amount">Override Amount</label>
										<input type="number" class="form-control" id="Override_Amount" name="Override_Amount" step="0.01" value="@Model.Override_Amount">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="tariff_starting_date">Starting Date</label>
										<input type="date" class="form-control" id="tariff_starting_date" name="tariff_starting_date" value="@Model.tariff_starting_date.ToString("yyyy-MM-dd")" required>
									</div>


								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="row">
			<div class="col-md-12">
				<div class="card card-body">
					<div class="row">
						<div class="col-lg-8">
						</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="col-lg-4">
								</div>
								<div class="col-lg-4">
									<button id="btndelete" class="btn btn-danger w-100 mb-2" type="submit" data-toggle="modal" data-target="#confirm-delete">
										<span> Delete </span>
									</button>
								</div>
								@*<div class="col-lg-4">
									<button id="ppp" class="btn btn-info w-100 mb-2" type="submit" data-toggle="modal" data-target="#view-attach-2">
										<span> Files </span>
									</button>
								</div>*@
								<div class="col-lg-4">
									<button id="edit" class="btn btn-primary w-100 bglocalcolor" type="submit">
										<span> Save </span>
									</button>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="confirm-email-approval" class="modal fade" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Are you sure you want to delete this tariff?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn  bglocalcolor border" data-dismiss="modal">Close</button>
				<div id="thisloader" class="smloader hide"></div>
				<button id="confirmdeletebtn" type="button" class="btn btn-danger">Proceed</button>
			</div>
		</div>
	</div>
</div>






