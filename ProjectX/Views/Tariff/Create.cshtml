@model ProjectX.Entities.Models.Tariff.TariffGetResp
@{
    //var filldata = ViewData["filldata"] as ProjectX.Entities.Models.General.LoadDataResp;
}


<div class="content" pgtype="view">
    <div class="container-fluid" style="padding:10px 0">
        <div class="row mb-3">
            <div class="col-md-12 ">
                <div class="card h-100 ">
                    <div class="card-body">
                        <h4 class="card-title ">
                            <i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
                            <span>New Tariff</span>
                        </h4>
                        <hr />
                        <div class="row">
                            <div id="divinfo" class="col-lg-12">
                                <div class="row">
                                    <!-- id -->
                                    <div class="form-group mb-3 col-lg-4">
                                        <label for="id">id</label>
                                        <input type="number" class="form-control" id="id" name="id">
                                    </div>

                                    <!-- idPackage -->
                                    <div class="form-group mb-3 col-lg-4">
                                        <label for="idPackage">idPackage</label>
                                        <select class="form-control" id="idPackage" name="idPackage">
                                          
                                        </select>
                                    </div>

                                    <!-- start_age -->
                                    <div class="form-group mb-3 col-lg-4">
                                        <label for="start_age">start_age</label>
                                        <input type="number" class="form-control" id="start_age" name="start_age">
                                    </div>

                                    <!-- end_age -->
                                    <div class="form-group mb-3 col-lg-4">
                                        <label for="end_age">end_age</label>
                                        <input type="number" class="form-control" id="end_age" name="end_age">
                                    </div>

                                    <!-- number_of_days -->
                                    <div class="form-group mb-3 col-lg-4">
                                        <label for="number_of_days">number_of_days</label>
                                        <input type="number" class="form-control" id="number_of_days" name="number_of_days">
                                    </div>

                                    <!-- price_amount -->
                                    <div class="form-group mb-3 col-lg-4">
                                        <label for="price_amount">price_amount</label>
                                        <input type="number" class="form-control" id="price_amount" name="price_amount" step="0.01">
                                    </div>

                                    <!-- net_premium_amount -->
                                    <div class="form-group mb-3 col-lg-4">
                                        <label for="net_premium_amount">net_premium_amount</label>
                                        <input type="number" class="form-control" id="net_premium_amount" name="net_premium_amount" step="0.01">
                                    </div>

                                    <!-- pa_amount -->
                                    <div class="form-group mb-3 col-lg-4">
                                        <label for="pa_amount">pa_amount</label>
                                        <input type="number" class="form-control" id="pa_amount" name="pa_amount" step="0.01">
                                    </div>

                                    <!-- tariff_starting_date -->
                                    <div class="form-group mb-3 col-lg-4">
                                        <label for="tariff_starting_date">tariff_starting_date</label>
                                        <input type="date" class="form-control" id="tariff_starting_date" name="tariff_starting_date">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-lg-8">
                        </div>
                        <div class="col-lg-4">
                            <div class="row">
                                <div class="col-lg-8">
                                </div>
                                <div class="col-lg-4">
                                    <button id="create" class="btn btn-primary w-100 bglocalcolor" type="submit">
                                        <span> Add </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






