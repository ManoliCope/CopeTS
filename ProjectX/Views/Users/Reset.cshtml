<div class="content" pgtype="view">
	<div class="container-fluid" style="padding:10px 0">
		<div class="row mb-3">
			<div class="col-md-12 ">
				<div class="card h-100 ">
					<div class="card-header custom">
						<h4 class="card-title ">
							<i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
							<span>Password Reset </span>
						</h4>
					</div>
					<div class="card-body">

						<div class="row">
							<div id="divinfo" class="col-lg-12">
								<div class="row">
									<div class="form-group mb-3 col-lg-4">
										<label for="title">Old Password</label>
										<input type="text" class="form-control" id="old-password" name="old-password" placeholder="Old Password" required><br><br>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="title">New Password</label>
										<input type="password" class="form-control" id="new-password" name="new-password" placeholder="New Password" required><br><br>
									</div>

									<div class="form-group mb-3 col-lg-4">
										<label for="title">Confirm Password</label>
										<input type="password" class="form-control" id="confirm-password" name="confirm-password" placeholder="Confirm Password" required><br><br>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<div class="card card-body">
					<div class="row">
						<div class="col-lg-8">
						</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="col-lg-8">
								</div>
								<div class="col-lg-4">
									<input type="submit" class="btn btn-primary btn-block bglocalcolor" value="Reset" onclick="resetpassword()">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




