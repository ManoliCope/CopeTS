@model ProjectX.Entities.Models.Product.ProdResp
@{
	//var filldata = ViewData["filldata"] as ProjectX.Entities.Models.General.LoadDataResp;

}


<div class="content" pgtype="view">
	<div class="container-fluid" style="padding:10px 0">
		<div class="row mb-3">
			<div class="col-md-12 ">
				<div class="card h-100 ">
					<div class="card-body">
						<h4 class="card-title ">
							<i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
							<span>Edit Product</span>
						</h4>
						<hr />

						<div class="row">
							<div id="divinfo" class="col-lg-12" mid="@Model.id">
								<div class="row">

									<div class="form-group mb-3 col-lg-4">
										<label for="title">Title</label>
										<input type="text" class="form-control" id="title"  name="title" required="" value="@Model.title">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="description">Description</label>
										<input type="text" class="form-control" id="description" name="description" value="@Model.description">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="activation_date">Activation Date</label>
										<input type="date" class="form-control" id="activation_date" name="activation_date" required="" value="@Model.activation_date.ToString("yyyy-MM-dd")">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="is_deductible">Deductible</label>
										<input type="number" class="form-control" id="is_deductible" name="is_deductible" step="0.01" value="@Model.is_deductible">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="sports_activities">Sports Activities</label>
										<input type="number" class="form-control" id="sports_activities" name="sports_activities" step="0.01" value="@Model.sports_activities">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<label for="additional_benefits">Additional Benefits</label>
										<input type="number" class="form-control" id="additional_benefits" name="additional_benefits" step="0.01" value="@Model.additional_benefits">
									</div>
									<div class="form-group mb-3 col-lg-4">
										<div class="form-group mb-0">
											<div class="form-check">
												<input class="form-check-input" type="checkbox" id="is_family" autocomplete="off" @(Model.is_family ? "checked" : "" )>
												<label class="form-check-label" for="is_family">
													Is Family
												</label>
												<br>
												<input class="form-check-input" type="checkbox" id="is_active" autocomplete="off" @(Model.is_active ? "checked" : "" )>
												<label class="form-check-label" for="is_active">
													Is Active
												</label>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="row">
			<div class="col-md-12">
				<div class="card card-body">
					<div class="row">
						<div class="col-lg-8">
						</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="col-lg-4">
									<button id="btndelete" class="btn btn-danger w-100 mb-2" type="submit" data-toggle="modal" data-target="#confirm-delete">
										<span> Delete </span>
									</button>
								</div>
								<div class="col-lg-4">
									<button id="ppp" class="btn btn-info w-100 mb-2" type="submit" data-toggle="modal" data-target="#view-attach-2">
										<span> Files </span>
									</button>
								</div>
								<div class="col-lg-4">
									<button id="edit" class="btn btn-primary w-100 bglocalcolor" type="submit">
										<span> Save </span>
									</button>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="confirm-email-approval" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Product?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn  bglocalcolor border" data-dismiss="modal">Close</button>
                <div id="thisloader" class="smloader hide"></div>
                <button id="confirmdeletebtn" type="button" class="btn btn-danger">Proceed</button>
            </div>
        </div>
    </div>
</div>






