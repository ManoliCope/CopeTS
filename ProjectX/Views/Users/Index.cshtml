@{
	var rights = ViewData["userrights"] as ProjectX.Entities.Models.Users.UserRights;

}

<div class="content">
	<!-- Start Content-->
	<div class="row page-title">
		<div class="col-md-12">
			@if (rights.Agents_Creation == true)
			{
				<a class="btn bglocalcolor float-right addnewbtn" href="/users/create/">
					<i class="fas fa-plus-circle"></i> Add
				</a>
			}
			
						@*<h4 class="card-title ">
							<i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
							<span>Main</span>
						</h4>*@
					
			<h4 class="mb-0 mt-0 float-left">Main</h4>

		</div>
	</div>

	<div class="container-fluid " style="padding:10px 0">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div id="searchform" class="card-body">
						<div>
							<div class="row mb-6">
								<div class="col-lg-3 mb-lg-0 mb-6">
									<label>Name:</label>
									<input id="prname" type="text" class="form-control datatable-input" placeholder="User Name" data-col-index="0">
								</div>
								<div class="col-lg-3 mb-lg-0 mb-6 ">

								</div>

								<div class="col-lg-3 mb-lg-0 mb-6 hidden">
									<label for="prcountry">Country: </label>
									<select id="prcountry" data-plugin="prcountry" class="form-control" data-placeholder="Select an option">
										<option disabled selected>Select Country</option>

									</select>
								</div>


								<div class="col-lg-3">
								</div>
								<div class="col-lg-3">
									<div class="row mt-4">
										<div class="col-sm-6">
											<button class="btn bglocalcolor" id="searchprofile" style="width:100%">
												<span>
													<i class="la la-search"></i>
													<span>Search</span>
												</span>
											</button>&nbsp;&nbsp;
										</div>
										<div class="col-sm-6">
											<button class="btn btn-info resetdiv" id="kt_reset" style="width:100%">
												<span>
													<i class="la la-close"></i>
													<span>Reset</span>
												</span>
											</button>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row tablediv">
			<div class="col-lg-12">
				<div class="card">
					<label id="parentlabel" style="padding-left: 10px;padding-top: 5px;"></label>
					<div class="card-body">
						
						
						@if (rights.Agents_Creation == true)
						{
							<table id="userstable" class="table dt-responsive nowrap table compact table-hover table-flush table-striped table-bordered" generate="1" style="width:100%; ">
							</table>

						}
						else
						{
							<table id="userstable" class="table dt-responsive nowrap table compact table-hover table-flush table-striped table-bordered" generate="0" style="width:100%; ">
							</table>

						}

					</div>
				</div>
			</div>
		</div>
		<div class="modal modal-popup" id="view-policy" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
			<div class="modal-dialog  modal-full">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="addLabel"> View Policy</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="false">×</span>
						</button>
					</div>
					<div class="scrolly">
						<div class="modal-body">
						</div>
					</div>
				</div>
			</div>
		</div>


		<div id="confirm-delete-user" class="modal fade" data-backdrop="static" data-keyboard="false">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						Are you sure you want to delete this user?
					</div>
					<div class="modal-footer">
						<button type="button" class="btn  bglocalcolor border" data-dismiss="modal">Close</button>
						<div id="thisloader" class="smloader hide"></div>
						<button id="confirmdeleteuser" type="button" class="btn btn-danger">Proceed</button>
					</div>
				</div>
			</div>
		</div>

		<div class="modal fade" id="view-credentials" tabindex="-1" role="dialog" aria-labelledby="viewcredentialsModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content" style="width:600px">
					<div class="modal-header">
						<h5 class="modal-title" id="passwordModalLabel">Users</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<!-- Table starts here -->
						<table id="userscrendentials" class="table dt-responsive nowrap table compact table-hover table-flush table-striped table-bordered" generate="1" style="width:100%; ">
							</table>

					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>



