@*@model ProjectX.Entities.Models.General.LoadDataResp*@
@{
	var filldata = ViewData["loadData"] as ProjectX.Entities.Models.General.LoadDataResp;
	var userid = ViewData["userid"] as string;
}
<style>
    .width-btn {
        width: 100px;
    }
</style>
<div class="content">
    <!-- Start Content-->
    <div class="row page-title">
        <div class="col-md-12">
         
            <a class="btn bglocalcolor float-right addnewbtn text-white m-0" data-toggle="modal" data-target="#openAssignProdView" onclick="openAssignView()">
                <i class="fas fa-plus-circle"></i> Assign New
            </a>
            <h4 class="mb-0 mt-0 float-left">Assign Product:</h4>




        </div>
    </div>
    <div class="container-fluid " style="padding:10px 0">
      

        <div class="row tablediv">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <table id="assprodtable" userid="@userid" class="table dt-responsive nowrap table compact table-hover table-flush table-striped table-bordered" style="width:100%; ">
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="confirm-email-approval" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn  bglocalcolor border" data-dismiss="modal">Close</button>
                <div id="thisloader" class="smloader hide"></div>
                <button id="confirmdeletebtn"  type="button" class="btn btn-danger">Proceed</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="openAssignProdView" tabindex="-1" role="dialog" aria-labelledby="passwordModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="passwordModalLabel">Assign Product:</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">

				<div class="col-md-12">
                    <label class="form-control-label" for="productId">Select Product:<span class="red-star"> *</span></label>
					<select class="form-control" name="productId" id="productId" field-name="productId" required >
								<option></option>
								@foreach (var thislist in filldata.loadedData.products)
								{

									@*@if (thislist.LK_ID == Convert.ToInt64(Model.category))
									{
										<option value="@thislist.LK_ID" selected> @thislist.LK_TableField</option>
									}
									else
									{*@
										<option value="@thislist.LK_ID"> @thislist.LK_TableField</option>
									@*}*@
								}


							</select>
				</div>
               <div class="col-md-12">
					<label class="form-control-label" for="issuingFees">Issuing Fees: </label>
							<input class="form-control" onclick="removeRedColor(this)" field-name="issuingFees" type="number" min="0" max="99" name="issuingFees" id="issuingFees" oninput="this.value = Math.abs(this.value)" >
						
				</div>
                <div class="col-md-12">

                    @using (Html.BeginForm("Upload", "Excel", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					<div class="form-group  pt-2">
						<label for="file">Select File:</label>
						<input type="file" name="Upload File" id="uploadFile" accept=".pdf" class="form-control-file file-upload" required />
					</div>
				}

				</div>
               @* <div class="col-md-12 d-flex justify-content-center">
					<button type="button" class="btn btn-secondary width-btn" data-dismiss="modal" id="saveUsersProd">Save</button>
				</div>*@
               
			</div>
			<div class="modal-footer">
				@*<button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>*@
					<button type="button" class="btn btn-secondary width-btn" data-dismiss="modal" id="saveUsersProd">Save</button>

			</div>
		</div>
	</div>
</div>