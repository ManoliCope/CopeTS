@model ProjectX.Entities.Models.General.LoadDataResp
<link href="~/Content/assets/css/registercall.css" rel="stylesheet" asp-append-version="true" />

<div class="content">
    <div class="container-fluid" style="padding:10px 0">
        <div class="row ">
            <div id="calldiv" class="col-lg-12  mb-3">
                <div class="card h-100 mb-0 pb-1">
                    <div class="card-body card-body pb-0">
                        <h4 class="card-title ">
                            <i class="fa fa-arrow-alt-circle-left pointercursor" onclick="history.back()"></i>
                            Production Report
                        </h4>
                        <hr />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card m-0" style="box-shadow:none !important">
                                    <div id="searchform" class="card-body ">
                                        @*first row*@
                                        <div class="row mb-6">
                                            @*from*@
                                             <div class="col-md-3 mb-lg-0 mb-6" >
                                                <label>From:</label>
                                                <input id="datefrom" type="date" class="form-control datatable-input required" value="" >
                                            </div>
                                            @*to*@
                                            <div class="col-md-3 mb-lg-0 mb-6">
                                                <label>To:</label>
                                                <input id="dateto" type="date" class="form-control datatable-input required" value="">
                                            </div>
                                             @*agent report*@
                                              <div class="col-md-3 mb-lg-0 mb-6">
                                                <label>Agent Report:</label>
                                                 <select class="form-control" name="agentId" id="agentId" field-name="agent" onchange="loadChildren()" required >
                                                    @if (Model.loadedData.agents.Count > 1)
                                                    {
                                                    <option value=""> Select Agent</option>
                                                        
                                                    }
                                 @foreach (var thislist in Model.loadedData.agents)
											        {
											        	<option value="@thislist.LK_ID"> @thislist.LK_TableField</option>
											        }
                                

                            </select>
                                            </div>
                                             @*sub agent report*@
                                             <div class="col-md-3 mb-lg-0 mb-6">
                                                <label>Sub Agent Report:</label>
                                                 <select class="form-control" name="subAgentId" id="subAgentId" field-name="subagent" required >
                                 <option value=""> Select Sub Agent</option>
                                 @foreach (var thislist in Model.loadedData.subagents)
											        {
											        	<option value="@thislist.LK_ID" parent="@thislist.LK_ParentID"> @thislist.LK_TableField</option>
											        }
                                

                            </select>
                                            </div>

                                        </div>
                                        @*second row*@
                                         <div class="row mb-6">
                                              <div class="col-md-12 mt-12">
                                                <div class="row mt-4">
                                                    @*poliocy status*@
                                              <div class="col-md-3 mb-lg-0 mb-6">
                                                <label>Policy Status:</label>
                                                 <select class="form-control" name="policyStatus" id="policyStatus" field-name="policystatus" required >
                                
                                 @foreach (var thislist in Model.loadedData.productionTabs)
											        {
											        	<option value="@thislist.LK_ID"> @thislist.LK_TableField</option>
											        }
                                

                            </select>
                                            </div>
                                            @*poliocy number*@
                                             <div class="col-md-3 mb-lg-0 mb-6" >
                                                <label>Policy Number:</label>
                                                <input id="policyNumber" type="text" class="form-control datatable-input required" value="" >
                                            </div>
                                           @*Client First Name*@
                                               <div class="col-md-3 mb-lg-0 mb-6">
                                                <label>Client First Name:</label>
                                                <input id="clientFirstName" type="text" class="form-control datatable-input required" value="">
                                            </div>
                                            @*Client Last Name*@
                                            <div class="col-md-3 mb-lg-0 mb-6" >
                                                <label>Client Last Name:</label>
                                                <input id="clientLastName" type="text" class="form-control datatable-input required" value="" >
                                            </div>

                                        </div>
                                        </div>
                                        </div>
                                         @*third row*@
                                         <div class="row mb-6">
                                             <div class="col-md-12 mt-12">
                                                <div class="row mt-4">
                                             @*Passport Number*@
                                             <div class="col-md-3 mb-lg-0 mb-6">
                                                <label>Passport Number:</label>
                                                <input id="passportNumber" type="text" class="form-control datatable-input required" value="">
                                            </div>
                                            </div>
                                            </div>

                                        </div>
                                        @*fourth row*@
                                        <div class="row mb-6">
                                          
                                           
                                         
                                            <div class="col-md-3 mt-1">
                                                <div class="row mt-4">
                                                    <div class="col-md-12">
                                                        <button class="btn bglocalcolor loadingthis" id="generateproduction" data-toggle="tooltip"
                                                                data-original-title="Check dates!" style="width:100%">
                                                            <span>
                                                                <i class="la la-search"></i>
                                                                <span>Generate</span>
                                                            </span>
                                                        </button>&nbsp;&nbsp;

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-8">
                                            <div class="col-lg-9 mb-lg-0 mb-6">
                                            </div>
                                            <div class="col-lg-3">

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


